<!--versionCode is optional and Android only -->

<name>Andrea Birchfield Assignment 6</name>

<description>
    Andrea Birchfield Assignment 6

</description>

<author>
    Andrea L Birchfield
</author>

<preference name="phonegap-version" value="cli-6.5.0" />
<plugin name="cordova-plugin-whitelist" source="npm" />
<access origin="*" />

<plugin name="cordova-plugin-geolocation" spec="2.4.3" />
<plugin name="cordova-plugin-splashscreen" source="npm" />
<!--<plugin name="cordova-plugin-camera" spec="1.2.0" source="npm" />-->
<plugin name="cordova-plugin-contacts" source="npm" spec="2.3.1" />
<plugin name="cordova-plugin-camera" source="npm" spec= "2.4.1"/>
<plugin name="cordova-plugin-contacts-phonenumbers" source="npm"/>
<plugin name="cordova-plugin-network-information" source="npm"/>
<plugin name="cordova-plugin-device" source="npm"/>


<!--<plugin name="cordova-plugin-camera" spec="3.0.0" source="npm"/>-->
<!--<plugin name="cordova-plugin-contacts" source="npm" />-->-->
<preference name="SplashScreenDelay" value="3000" />

<splash src="splash/ios/splash-large.png" platform="ios" width="1242" height="2208" />
<splash src="splash/ios/splash-medium.png" platform="ios" width="2208" height="1242" />
<splash src="splash/ios/splash-mlarge.png" platform="ios" width="320" height="480" />
<splash src="splash/ios/splash-small.png" platform="ios" width="640" height="960" />
<splash src="splash.png" platform="android" qualifier="ldpi" /> 
<splash src="blue-paint-splash-181586.jpg" platform="winphone" />


<icon src="icon-60@3x.png" platform="ios" width="180" height="180" />

<!-- iPhone / iPod Touch  -->
